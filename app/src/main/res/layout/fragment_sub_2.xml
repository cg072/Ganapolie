<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5CAE9"
    android:padding="10dp">

    <ImageView
        android:id="@+id/sub2img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#ffffff"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름 : "
        android:textSize="20dp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/sub2img"
        android:layout_toEndOf="@+id/sub2img" />
    <TextView
        android:id="@+id/addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주소 : "
        android:textSize="20dp"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name" />

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="직책 : "
        android:textSize="20dp"
        android:layout_below="@+id/addr"
        android:layout_alignLeft="@+id/addr"
        android:layout_alignStart="@+id/addr" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail :"
        android:textSize="20dp"
        android:layout_below="@+id/position"
        android:layout_alignLeft="@+id/position"
        android:layout_alignStart="@+id/position" />

    <TextView
        android:id="@+id/fax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fax : "
        android:textSize="20dp"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />

    <TextView
        android:id="@+id/call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call : "
        android:textSize="20dp"
        android:layout_below="@+id/fax"
        android:layout_alignLeft="@+id/fax"
        android:layout_alignStart="@+id/fax" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="phone"
        android:textSize="20dp"
        android:layout_below="@+id/call"
        android:layout_alignLeft="@+id/call"
        android:layout_alignStart="@+id/call" />

    <!--이름 :-->
    <!--주소 :-->
    <!--직책 :-->
    <!--이메일:-->
    <!--Fax:-->
    <!--Cell‘:-->
    <!--Tel:-->

    <Button
        android:id="@+id/subBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="편집"
        android:layout_below="@+id/sub2img"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />



</RelativeLayout>